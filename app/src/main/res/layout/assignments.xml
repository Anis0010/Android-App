<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="button"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/purple_200"
        android:id="@+id/bigbtn"/>

    <Button
        android:id="@+id/one"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toEndOf="@+id/bigbtn"
        android:layout_alignTop="@+id/bigbtn"
        android:background="@color/teal_200"/>

    <Button
        android:id="@+id/two"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toStartOf="@+id/bigbtn"
        android:layout_alignBottom="@+id/bigbtn"
        android:background="@color/teal_200"/>

    <Button
        android:id="@+id/three"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignStart="@id/bigbtn"
        android:layout_above="@id/bigbtn"
        android:background="@color/teal_200"/>

    <Button
        android:id="@+id/four"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@id/bigbtn"
        android:layout_below="@id/bigbtn"
        android:background="@color/teal_200"/>
    

    </RelativeLayout>

